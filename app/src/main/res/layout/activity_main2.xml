<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3DF31"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/n5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="TIPS\nTO BUILD A LANGUAGE LEARNING HABIT"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="65dp" />

    <View
        android:id="@+id/view"
        android:layout_width="500dp"
        android:layout_height="35dp"
        android:background="#50B7A7"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="-50dp"
        android:rotation="-5" />

    <View
        android:id="@+id/view2"
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="-5dp"
        android:background="#DC466F"
        android:rotation="-5"
        android:translationZ="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="cursive"
            android:text="+ free \nNew habit \n tracker" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_m2" />
    </LinearLayout>

</LinearLayout>